# Docker & CI/CD Environment Variables
# Copy this file to .env and fill in the values

# Application
NODE_ENV=production
NEXT_PUBLIC_API_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://datacenter:datacenter_password@localhost:5432/datacenter_db
POSTGRES_USER=datacenter
POSTGRES_PASSWORD=datacenter_password
POSTGRES_DB=datacenter_db
POSTGRES_PORT=5432

# Redis Cache
REDIS_URL=redis://:redis_password@localhost:6379
REDIS_PASSWORD=redis_password
REDIS_PORT=6379

# Docker Compose
APP_PORT=3000

# Vercel (for production deployment)
# Get these from: https://vercel.com/account/tokens
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_org_id_here
VERCEL_PROJECT_ID=your_project_id_here

# Docker Hub (for CI/CD)
# Create at: https://hub.docker.com/settings/security
DOCKER_USERNAME=your_dockerhub_username
DOCKER_PASSWORD=your_dockerhub_token_or_password

# GitHub Actions Secrets
# Add these to: https://github.com/YOUR_USERNAME/YOUR_REPO/settings/secrets/actions
# - DOCKER_USERNAME
# - DOCKER_PASSWORD
# - VERCEL_TOKEN
# - VERCEL_ORG_ID
# - VERCEL_PROJECT_ID
